<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Razor </title><!-- Dynamisk titel -->
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/m1_1.styles.css" asp-append-version="true" />
</head>
<body>
    <header> 
        <!-- Logga -->
        <img src="~/images/logo_jpg.jpg" alt="Logotyp" id="logo">

        <!-- Dagens datum -->
        <div class="date" style="text-align: right;">
            <p>Dagens datum är: @DateTime.Now.ToString("yyyy-MM-dd")</p>
        </div> 

    </header>

    <!-- Hamburgermeny-knapp -->
    <button id="hamburger-btn" class="hamburger-btn" aria-label="Toggle navigation">
        <span class="hamburger-icon"></span>
        <span class="hamburger-icon"></span>
        <span class="hamburger-icon"></span>
    </button>

    <!-- Sidinnehåll -->
    <div class="main_layout">

        <!-- Sidebar med navigering -->
        <div class="sidebar">
            <nav>
                <!-- X för att Stänga hamburgemeny-->
                <button id="close-btn" class="close-btn" aria-label="Close navigation">
                    <span class="close-icon">X</span>
                </button>

                <ul class="navbar-nav flex-column">
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-page="/Index">Startsidan</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-page="/Razor">Razor</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-page="/about">Om mig</a></li>
                </ul>
            </nav>
        </div>

        <!-- Här visas de separata sidornas unika huvudinnehåll -->
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div>
            &copy; 2025 - Anne-Lii Hansen  Kontakta mig via e-post:  <a href="mailto:anha2324@student.miun.se">anha2324@student.miun.se</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
